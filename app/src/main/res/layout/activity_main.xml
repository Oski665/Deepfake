<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload image to view"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="1dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pbslogo"/>
        <ImageView
            tools:ignore="ContentDescription"
            android:id="@+id/ivCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </com.google.android.material.card.MaterialCardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/customborder">

        <LinearLayout
            android:id="@+id/historyGallery"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btOpenCamera"
            android:foreground="@drawable/ic_addcamera"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>

<!--        <ImageButton-->
<!--            android:layout_width="56dp"-->
<!--            android:layout_height="56dp"-->
<!--            android:background="@drawable/buttong_background"-->
<!--            android:padding="16dp"-->
<!--            android:scaleType="fitXY"-->
<!--            android:elevation="8dp"-->
<!--            android:src="@drawable/ic_add"-->
<!--            android:layout_marginTop="5dp">-->
<!--        </ImageButton>-->
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btOpenGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ic_addgallery"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>


</LinearLayout>